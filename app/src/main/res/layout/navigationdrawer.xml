<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/navigationAvatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:layout_marginBottom="10.3dp"
        android:src="@drawable/ic_nav_avatar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_corner_radius="45dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:padding="16dp"
        android:src="@drawable/ic_settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/navigationUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/geometria_medium"
        android:gravity="center_horizontal"
        android:text="Валерия Баркова"
        android:textColor="@color/textColorGray"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@id/navigationAvatar"
        app:layout_constraintStart_toStartOf="@id/navigationAvatar"
        app:layout_constraintTop_toBottomOf="@id/navigationAvatar" />

    <ImageView
        android:id="@+id/navigationSeparator"
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:layout_marginTop="19dp"
        android:layout_marginHorizontal="19dp"
        android:src="@drawable/dotted_line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/navigationUserName" />

    <TextView
        android:id="@+id/navigationProfile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:drawableStart="@drawable/ic_navigation_user"
        android:drawablePadding="20dp"
        android:focusable="true"
        android:fontFamily="@font/geometria_regular"
        android:paddingHorizontal="25dp"
        android:paddingVertical="18dp"
        android:layout_marginTop="21dp"
        android:text="Профиль"
        android:textColor="@color/textColorGray"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/navigationSeparator"/>

    <TextView
        android:id="@+id/navigationRecommend"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:drawableStart="@drawable/ic_navigation_recomend"
        android:drawablePadding="20dp"
        android:focusable="true"
        android:fontFamily="@font/geometria_regular"
        android:paddingHorizontal="25dp"
        android:paddingVertical="18dp"
        android:text="Рекомендации"
        android:textColor="@color/textColorGray"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/navigationProfile"/>

    <TextView
        android:id="@+id/navigationMeeting"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:drawableStart="@drawable/ic_navigation_meeting"
        android:drawablePadding="20dp"
        android:focusable="true"
        android:fontFamily="@font/geometria_regular"
        android:paddingHorizontal="25dp"
        android:paddingVertical="18dp"
        android:text="Встречи"
        android:textColor="@color/textColorGray"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/navigationRecommend"/>

    <TextView
        android:id="@+id/navigationFeed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:drawableStart="@drawable/ic_navigation_feed"
        android:drawablePadding="20dp"
        android:focusable="true"
        android:fontFamily="@font/geometria_regular"
        android:paddingHorizontal="25dp"
        android:paddingVertical="18dp"
        android:text="Лента новостей"
        android:textColor="@color/textColorGray"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/navigationMeeting"/>

    <TextView
        android:id="@+id/navigationChat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:drawableStart="@drawable/ic_navigation_chat"
        android:drawablePadding="20dp"
        android:focusable="true"
        android:fontFamily="@font/geometria_regular"
        android:paddingHorizontal="25dp"
        android:paddingVertical="18dp"
        android:text="Чат"
        android:textColor="@color/textColorGray"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/navigationFeed"/>

</androidx.constraintlayout.widget.ConstraintLayout>